mixin logo-lg(src, alt)
  .logo.col-12.col-lg-10
    img.img-fluid(src="img/logos/"+src, alt=alt)

//- event = {title, subtitle?, location}
mixin schedule-row(time, event)
  .row.no-gutters
    .col-2
      .time!= time
    .col-10.col-lg-8
      div(class=(event.type ? "event event-" + event.type : "event"))
        .title!= event.title
        .subtitle!= event.subtitle || ""
        .location!= event.location || "&nbsp;"

mixin schedule-row-2(time, event1, event2)
  .row.no-gutters
    .col-2
      .time!= time
    .col-5.col-lg-4
      div(class=(event1.type ? "event event-" + event1.type : "event"))
        .title!= event1.title
        .subtitle!= event1.subtitle || ""
        .location!= event1.location || "&nbsp;"
    .col-5.col-lg-4
      div(class=(event2.type ? "event event-" + event2.type : "event"))
        .title!= event2.title
        .subtitle!= event2.subtitle || ""
        .location!= event2.location || "&nbsp;"

mixin schedule-div(time, title)
  .row.no-gutters
    .col-2
      .time!= time
    .col-10.col-lg-8
      .schedule-div
        span.schedule-div-text!= title


