    img.img-fluid(src="img/logos/"+src, alt=alt)

mixin logo-intel(src, alt)
  .logo.col-6.col-sm-5.col-md-4.col-lg-3.logo-grow
    img.img-fluid(src="img/logos/"+src, alt=alt)

mixin logo-md(src, alt)
  .logo.col-8.col-md-5
    img.img-fluid(src="img/logos/"+src, alt=alt)

mixin logo-christie(src, alt)
  .logo.col-8.col-md-5.logo-grow-2
